@model IEnumerable<DeviceManagement_WebApp.Models.Device>

@{
    ViewData["Title"] = "Devices";
}

<h1>Devices
    <a asp-action="Create" title="Create new Device">
        <img src="~/images/create.png" style="height:30px; width:30px; position:relative; top:-2px" />
    </a>
</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeviceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zone)
            </th>
            <th>
                <a title="Search for a Device" onclick="location.href='@Url.Action("Search","Devices")'">
                    <img src="~/images/search.png" style="height:20px;width:20px;" />
                </a>
            </th>
            <th>
                <a title="Recent Device" onclick="location.href='@Url.Action("GetRecent","Devices")'">
                    <img src="~/images/recent.png" style="height:20px;width:20px;" />
                </a>
            </th>
            <th>
                <a title="Sort Devices" onclick="location.href='@Url.Action("Sort","Devices")'">
                    <img src="~/images/sort.png" style="height:20px;width:20px;" />
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zone.ZoneName)
            </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DeviceId" title="Edit Device">
                        <img src="~/images/edit.png" style="height:20px;width:20px;" />
                    </a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DeviceId" title="View Details">
                        <img src="~/images/details.png" style="height:20px;width:20px;" />
                    </a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.DeviceId" title="Delete Device">
                        <img src="~/images/delete.png" style="height:20px;width:20px;" />
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
